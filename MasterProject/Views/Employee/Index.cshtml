@model IEnumerable<MasterProject.Models.EmployeeModel>

<h2>Employee List</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Shift</th>
                <th>Department</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                
                <tr>
                    <td>@employee.c_empid</td>
                    <td>@employee.c_empname</td>
                    <td>@employee.c_empgender</td>
                    <td>@employee.c_empdob.ToShortDateString()</td>
                    <td>@employee.c_empshift</td>
                    
                    <td>@employee.c_empdept</td>
                    <td>
                        <img src="@Url.Action("GetPhoto", "Employee", new { id = employee.c_empimage })" alt="Employee Photo"
                            width="100" />
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.c_empid" class="btn btn-warning">Edit</a> |
                        
                        <a asp-action="Details" asp-route-id="@employee.c_empid" class="btn btn-info">Details</a> |
                        <form method="post" action="@Url.Action("Delete", "Employee")" style="display:inline;">
                            @Html.Hidden("id", employee.c_empid)
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Create" class="btn btn-success">Create New Employee</a>
