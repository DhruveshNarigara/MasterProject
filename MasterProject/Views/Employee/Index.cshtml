@model List<EmployeeModel>

@{
    ViewData["Title"] = "ViewEmployee";
}
<div class="container">
    <h2 class="text-center">Get All Student</h2>

    @* <p>
    <a asp-action="ViewUser" class="btn btn-outline-primary">Add New Book</a>
    </p> *@

    <div class="card mb-4">
        <div class="card-body">

            <table class="table table-responsive table-striped ">
                <thead>
                    <tr>
                        @* <th>Id</th> *@
                        <th>Name</th>
                        <th>Gender</th>
                        <th>DOB</th>
                        <th>Shift</th>
                        <th>Department</th>
                        <th>Image</th>


                        <th>Action</th>


                        @* <th>Actions</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <td>@item.c_itemid</td> *@
                            <td>@item.c_empname</td>
                            <td>@item.c_empgender</td>
                            <td>@item.c_empdob</td>
                            <td>@item.c_empshift</td>

                            <td>@item.c_empdept</td>
                            <td>
                                <img src="~/images/@item.c_empimagePath" class="rounded-squre" height="100" width="100"
                                    asp-append-version="true" />

                            </td>




                            <td>

                                   <a asp-action="EditEmployee" asp-route-id="@item.c_empid" class="btn btn-warning">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.c_empid" class="btn btn-info">Details</a> |
                        <form method="post" action="@Url.Action("Delete", "Employee")" style="display:inline;">
                            @Html.Hidden("id", item.c_empid)
                            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');" type="submit">Delete</button>
                        </form>
                            </td>
                        </tr>
                
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>


<script>
    function confirmDelete(c_itemid) {
        if (confirm('Are you sure you want to delete this items?')) {
            $.ajax({
                url: '@Url.Action("DeleteProduct", "Admin")',
                type: 'POST',
                data: { c_userid: c_userid },
                success: function (result) {
                    // Reload the page or update the view as needed
                    location.reload(); // Example: Reload the page
                },
                error: function (error) {
                    console.log(error);
                    alert('Error deleting category.');
                }
            });
        }
    }
</script>