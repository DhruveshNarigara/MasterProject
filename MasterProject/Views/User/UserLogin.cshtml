@model MasterProject.Models.UserModel

@{
    ViewData["Title"] = "User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>User Login</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Message"]
                        </div>
                    }
                    <form asp-action="UserLogin" method="post">
                        <div class="form-group">
                            <label asp-for="c_email">Email address</label>
                            <input asp-for="c_email" type="email" class="form-control" />

                        </div>
                        <div class="form-group">
                            <label asp-for="c_password">Password</label>
                            <input asp-for="c_password" type="password" class="form-control" id="password" />
                            <input type="checkbox" id="togglePassword"> Show Password

                        </div>
                        <button type="submit" class="btn btn-dark">Login</button>
                    </form>
                    <div class="mt-3">
                        <p>Don't have an account? <a asp-action="UserRegister">Register here</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

<script>
    var password = document.getElementById("password");
    var togglePassword = document.getElementById("togglePassword");

    togglePassword.addEventListener("click", function (e) {
        // toggle the type attribute
        const type = password.getAttribute("type") === "password" ? "text" : "password";
        password.setAttribute("type", type);
        // toggle the checkbox state
        this.checked = !this.checked;
    });
</script>
}