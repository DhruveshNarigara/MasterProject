@model IEnumerable<MasterProject.Models.EmployeeModel>

<h2>Employee List</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Shift</th>
                <th>Department</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                
                <tr>
                    <td>@employee.c_empid</td>
                    <td>@employee.c_empname</td>
                    <td>@employee.c_empgender</td>
                    <td>@employee.c_empdob.ToShortDateString()</td>
                    <td>@employee.c_empshift</td>
                    
                    <td>@employee.c_empdept</td>
                   <td>
                                <img src="~/images/@employee.c_empimagePath" class="rounded-square" height="100" width="100" />
                                    

                            </td>

                    @* <td>
                        <a asp-action="Edit" asp-route-id="@employee.c_empid" class="btn btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@employee.c_empid" class="btn btn-danger">Delete</a> 
                        @* <a asp-action="Details" asp-route-id="@employee.c_empid" class="btn btn-info">Details</a> 
                    </td> *@

                    <td>
                        <a asp-action="EditEmployee" asp-route-id="@employee.c_empid" class="btn btn-warning">Edit</a> |
                        <a asp-action="Details" asp-route-id="@employee.c_empid" class="btn btn-info">Details</a> |
                        <form method="post" action="@Url.Action("Delete", "Employee")" style="display:inline;">
                            @Html.Hidden("id", employee.c_empid)
                            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');" type="submit">Delete</button>
                        </form>
                        </td>

                </tr>
            }
        </tbody>
    </table>
</div>

