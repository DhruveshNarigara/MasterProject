@model IEnumerable<MasterProject.Models.EmployeeModel>
@{
    ViewBag.Title = "Index";
}
<div>
    <h2>Employee</h2>
    <table id="emptable" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Shift</th>
                <th>Department</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<div>
    <div>
        <h2>Add Employee</h2>
        <form id="addemp" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" class="form-control" name="Name">
            </div>
            <div class="form-group">
                <label>Gender:</label><br>
                <label><input type="radio" name="Gender" value="Male"> Male</label>
                <label><input type="radio" name="Gender" value="Female"> Female</label>
                <label><input type="radio" name="Gender" value="Other"> Other</label>
            </div>
            <select class="form-control" id="c_deptname">
                    <option>Select Category</option>
                    @foreach (var department in ViewBag.DepartmentModel)
                    {
                        <option value="@department.Value">@department.Text</option>
                    }
                </select>
            <div class="form-group">
                <label for="Dob">Date of Birth:</label>
                <input type="date" class="form-control" name="c_empdob" id="Dob">
            </div>
            <div class="form-group">
                <label for="Shift">Shift:</label><br>
                <input type="checkbox" name="c_empshift" id="Day" value="Day"> Day<br>
                <input type="checkbox" name="c_empshift" id="Night" value="Night"> Night<br>
            </div>
            <div class="form-group">
                <label for="Image">Image:</label>
                <input type="file" class="form-control-file" name="Image">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
            <input type="button" onclick="resetForm()" value="Reset Form" class="btn btn-danger" />
        </form>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            function loadEmployees() {
                $.ajax({
                    url: 'UserAjax/GetAllEmployees',
                    type: 'GET',
                    dataType: 'json',
                    success: function (employees) {
                        var tbody = $('#emptable tbody');
                        tbody.empty(); // Clear existing rows

                        if (employees && employees.length > 0) {
                            employees.forEach(function (employee) {
                                var row = '';
                                if (employee != null) {
                                    row = `<tr>
                                        <td>${employee.c_empid}</td>
                                        <td>${employee.c_empname}</td>
                                        <td>${employee.c_empgender}</td>
                                        <td>${employee.c_empdob}</td>
                                        <td>${employee.c_empshift}</td>
                                        <td>${employee.c_empdept}</td>
                                        <td><img src="wwwroot/images/${employee.c_empimageFile}" alt="Employee Photo" style="max-width: 100px;"></td>
                                        <td>
                                            <button class="btn btn-primary edit" data-id="${employee.c_empid}">Edit</button>
                                            <button class="btn btn-danger delete" data-id="${employee.c_empid}">Delete</button>
                                        </td>
                                    </tr>`;
                                } else {
                                    row = '<tr><td colspan="8">Employee data not available</td></tr>';
                                }
                                tbody.append(row);
                            });
                        } else {
                            tbody.append('<tr><td colspan="8">No data available</td></tr>');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading employees:', error);
                        var tbody = $('#emptable tbody');
                        tbody.empty();
                        tbody.append('<tr><td colspan="8">Error loading employees</td></tr>');
                    }
                });
            }

            loadEmployees(); // Load employees when the page loads

              $(document).ready(function () {
            $('#addEmployeeForm').on('submit', function(e) {
                e.preventDefault();
                var formData = new FormData(this);
                $.ajax({
                    url: '/UserAjax/AddEmployee',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(data) {
                        console.log(data);
                        alert(data.message);
                        // Optionally, you can redirect to another page upon successful addition
                        // window.location.href = '/Employee/Index';
                    },
                    error: function(xhr, status, error) {
                        console.error('Error adding employee:', error);
                        alert('Error adding employee. Please try again.');
                    }
                });
            });
        });
        
        function resetForm() {
            $('#addEmployeeForm')[0].reset();
        }
        });
    </script>
}

